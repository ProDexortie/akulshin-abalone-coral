<%- include('partials/header') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if (locals.user) { %>
        <div class="alert alert-info">
          <h4>Вы уже вошли в систему</h4>
          <p>Вы уже авторизованы как <%= locals.user.name %>.</p>
          <div class="mt-3">
            <a href="/" class="btn btn-primary me-2">Перейти на главную</a>
            <a href="/logout" class="btn btn-outline-danger">Выйти из системы</a>
          </div>
        </div>
      <% } else { %>
        <div class="card shadow-sm">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">Вход в систему</h2>
            
            <form action="/login" method="POST" id="loginForm">
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Пароль</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-box-arrow-in-right me-2"></i>Войти
                </button>
              </div>
            </form>
            
            <div class="mt-3 text-center">
              <p>Нет аккаунта? <a href="/register" class="text-decoration-none">Зарегистрироваться</a></p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Дополнительная проверка на стороне клиента
  document.getElementById('loginForm')?.addEventListener('submit', function(e) {
    const email = document.getElementById('email').value.trim();
    const password = document.getElementById('password').value.trim();
    
    if (!email || !password) {
      e.preventDefault();
      alert('Пожалуйста, заполните все поля формы');
    }
    
    console.log('Форма входа отправлена');
  });
</script>

<%- include('partials/footer') %>